<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserDataMAUI.Pages.ProfilePage"
             Title="Profile">
    <StackLayout>
        <Label Text="{Binding Username}" Padding="10"></Label>
        <Entry Placeholder="New Password" Text="{Binding Password}" IsPassword="True"></Entry>
        <Button Text="Change Password" Command="{Binding ChangePasswordCommand}"></Button>
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>